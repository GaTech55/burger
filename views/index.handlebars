<h1>Eat-Da-Burger!</h1>
<img src="../public/assets/img/hamburger.jpg" alt="hamburger">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Burger devoured?</label><br>
    <input type="radio" name="devoured" value="1"> Devoured!<br>
    <input type="radio" name="devoured" value="0" checked> Not Yet Eaten
  </div>

  <button type="submit">Add burger</button>
</form>
<p>Enter a burger you want to eat Click the "Submit" button.</p>
